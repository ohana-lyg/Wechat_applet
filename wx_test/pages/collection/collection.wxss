/* pages/collection/collection.wxss */
.cps{
    display: flex;
    flex-direction:column;
    box-sizing: border-box;
    padding: 3px;
    margin-bottom: 60px;
  }
  
  .cp-danhao{
    background-color: #f2f2f2;
    font-size: 14px;
    color: gray;
    /* height: 30px; */
    line-height: 50px;
  }
  
  .cp{
    display: flex;
    padding: 5px;
    border-bottom: 1px solid gainsboro;
  }
  .cp-tupian{
    width: 20%;
  }
  .cp-img{
    width: 100%;
    border-radius: 10%;
  }
  .cp-xinxi{
    width: 65%;
    margin-left: 7px;
    display: flex;
    flex-direction: column;
    flex:1;
    margin: 10px 0 0 15px;
  
  }
  .cp-mingcheng{
    font-size: 16px;
    font-weight: bold;
    width: 95%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  
  .cp-jiage{
    font-size: 13px;
    color: red;
    margin-top: 7px;
  }
  .cp-shuliang{
    width: 15%;
    display: flex;
    align-items: center;
  }
  
  .cp-jiesuan{
    font-size: 14px;
    color:gray;
    line-height: 50px;
  }
  
  .cancel {
    float: right;
    margin-top: -46px;
    line-height: 50px;
  }