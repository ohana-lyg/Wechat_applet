/* pages/shopcar/shopcar.wxss */
.header {
    display: flex;
    flex-direction: column;
  }
  
  .shopcar {
    display: flex;
    padding: 10rpx;
    border-bottom: 1rpx dotted gainsboro;
  }
  
  .food_picture {
    width: 40%;
  }
  
  .food_img {
    width: 100%;
    border: 2rpx solid #f2f2f2;
    border-radius: 5rpx;
    box-shadow: 1rpx 2rpx 2rpx gainsboro;
  }
  
  .food_info {
    width: 60%;
    padding-left: 40rpx;
    display: flex;
    flex-direction: column;
  }
  
  .food_name {
    font-size: 16px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  
  .food_price {
    font-size: 16px;
    color: red;
    padding-top: 20rpx;
  }
  
  .food_amount {
    width: 20%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .food_reduce {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 1rpx solid gray;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
  }
  
  .food_piece {
    width: 1em;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .food_add {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 1rpx solid gray;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    background-color: red;
    color: white;
  }

/*底部菜单*/

.footer {
    position: absolute;
    bottom: 0;
    background-color: #f2f2f2;
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    height: 100rpx;
}

.cost {
    display: flex;
    position: relative;
    align-items: center;
    justify-content: center;
}

.cost-picture {
    position: absolute;
    top: -60rpx;
    left: 30rpx;
    background-color: antiquewhite;
    padding: 5rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1rpx dotted gainsboro;
}

.cost-img {
    width: 60rpx;
    height: 60rpx;
}

.cost-shu {
    color: red;
}

.settlement {
    width: 40%;
    background-color: orangered;
    color: white;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}