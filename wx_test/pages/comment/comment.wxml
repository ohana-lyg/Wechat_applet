        <view class='pl'>
            <view class='pl-yonghu'>
                <view class='pl-nicheng'>{{item.user_name}}</view>
                <view class='pl-shijian'>{{item.createdAt}}</view>
            </view>
            <view class="pl-show">
                <view class="pl-dian">
                    <view>
                        {{item.business_name}}
                    </view>
                    <image src="{{item.picture}}" class="img" mode='widthFix'/>
