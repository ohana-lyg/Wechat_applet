.container {
  height: 100vh;
}
.menu-item{
  width:100%;
  padding:5px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.menu-img{
  width:78%;
  align-self: center;
}
.menu-ziti{
  align-self: center;
  font-size: 16px;
}
.canteen {
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /*background-color: red;*/
}
.canteen-item {
  /* width: 90%; */
  width: 400rpx;
  text-align: center;
  margin-top: 10rpx;
  padding-left: 150rpx;
}
.swiper-show {
  background-color: white;
}
image {
  height: 290rpx;
  width: 100%;
}
.Goods-top {
  display: flex;
  flex-direction:row;
  justify-content: space-around;
  align-items: center;
  background-color: red;
}

.good-show {
  width: 100vw;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

}
.goods-item {
  width: 350rpx;
  height: 250rpx;
  background-color: green;
  margin-left: 18rpx;
  margin-top: 18rpx;
  box-shadow: 5px 5px 2px 1px rgba(0, 0, 255, .2);
  line-height: 200rpx; 
  text-align: center;
}
.goods-item > image {
  width: 352rpx;
  height: 250rpx;
}

